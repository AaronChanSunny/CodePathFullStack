<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.aaron.codepathfullstack"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SimpleActivity"
            android:label="@string/title_activity_simple"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aaron.codepathfullstack.MainActivity"/>
        </activity>
        <activity
            android:name=".AnimatorSetActivity"
            android:label="@string/title_activity_animator_set"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aaron.codepathfullstack.MainActivity"/>
        </activity>
        <activity
            android:name=".ViewPropertyAnimatorActivity"
            android:label="@string/title_activity_view_property_animator"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aaron.codepathfullstack.MainActivity"/>
        </activity>
        <activity
            android:name=".UsingXmlActivity"
            android:label="@string/title_activity_using_xml"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aaron.codepathfullstack.MainActivity"/>
        </activity>
        <activity
            android:name=".ValueAnimatorActivity"
            android:label="@string/title_activity_value_animaor"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aaron.codepathfullstack.MainActivity"/>
        </activity>
        <activity
            android:name=".ViewAnimatorActivity"
            android:label="@string/title_activity_view_animator"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aaron.codepathfullstack.MainActivity"/>
        </activity>
    </application>

</manifest>
